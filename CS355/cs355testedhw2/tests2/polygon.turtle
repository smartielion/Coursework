VAR N              #use VAR keyword for declaration but students can choose something else
VAR L
VAR THETA
VAR I

N := 5             # number of sides
L := 10            # length of a side
THETA := 360 / N   # internal angle
PENDOWN
I := 1
WHILE I <= N DO
  FORWARD L
  LEFT THETA
  I := I + 1
OD
PENUP 

